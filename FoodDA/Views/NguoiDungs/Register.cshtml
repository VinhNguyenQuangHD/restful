@model FoodDA.Models.NguoiDung
@{
    ViewBag.Title = "Register";

}
@using (Html.BeginForm("Register", "NguoiDungs", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-dangky">
        <div class="form-group">
            <div class="NoiDung__DangKy">Email:</div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.TenND, new { htmlAttributes = new { @class = "form-control", @id = "DK_TenNguoiDung" } })
                <div class="error__message__TenND"></div>
                @if (ViewBag.thongbaoloi != null)
                {
                    <span class="error__message__TenND">@ViewBag.thongbaoloi</span>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="NoiDung__DangKy">Số điện thoại:</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sdt, new { htmlAttributes = new { @class = "form-control", @id = "DK_SoDienThoai" } })
                <div class="error__message__SDT"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="NoiDung__DangKy">Địa chỉ:</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @id = "DK_DiaChi" } })
                <div class="error__message__DiaChi"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="NoiDung__DangKy">Tên đăng nhập:</div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @id = "DK_UserName" } })
                <div class="error__message__UserNameDangKY"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="NoiDung__DangKy">Mật khẩu:</div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", @id = "DK_PassWord" } })
                <div class="error__message__PasswordDK"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng Ký" class="btn btn-default" onclick="return validatorDK()" />
            </div>
        </div>
    </div>
}

